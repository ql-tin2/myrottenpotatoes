-# in app/views/movies/show.html.haml

%h2 Details about #{@movie.title}

%ul#details
  %li
    Rating:
    = @movie.rating
  %li
    Released on:
    = @movie.release_date.strftime("%B %d, %Y")

%h3 Description:

%p#description= @movie.description 
- # modify the last 1 lines of app/views/movies/show.html.haml to:
= link_to 'Edit info', edit_movie_path(@movie) , { :controller => 'controller_name', :id => 'action_name' }, :class => 'someclass'
= link_to 'Back to movie list', movies_path( {:title_header => true})
= button_to 'Delete', movie_path(@movie), :method=> :delete, :confirm => 'Are you sure?'


